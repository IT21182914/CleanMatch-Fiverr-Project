# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/CleanMatch_db

# Alternative: Supabase Configuration
# SUPABASE_URL=your_supabase_url
# SUPABASE_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRE=30d

# Stripe Configuration (Backend - Secret Keys Only)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Google APIs Configuration
GOOGLE_GEO_API_KEY=your_google_geocoding_api_key_here

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Session Configuration
SESSION_SECRET=your_session_secret_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
