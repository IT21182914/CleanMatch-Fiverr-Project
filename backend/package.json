{
  "name": "CleanMatch-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:pm": "node tools/process-manager.js",
    "seed": "node scripts/seed.js",
    "setup": "node scripts/setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:server": "node tests/test-server.js",
    "test:documents": "node tests/test-document-upload.js",
    "setup:storage": "node scripts/setup-supabase-storage.js",
    "build": "echo 'No build step required for Node.js backend'",
    "db:monitor": "node tools/db-monitor.js",
    "db:health": "node -e \"require('./config/database').healthCheck().then(h => console.log(JSON.stringify(h, null, 2)))\"",
    "migrate:create": "node node_modules/node-pg-migrate/bin/node-pg-migrate create --dir migrations",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:up:all": "node scripts/migrate.js up 999",
    "migrate:redo": "node scripts/migrate.js down 1 && node scripts/migrate.js up 1"
  },
  "keywords": [
    "cleaning",
    "marketplace",
    "ai",
    "services"
  ],
  "author": "CleanMatch Team",
  "license": "MIT",
  "description": "AI-powered cleaning services marketplace backend",
  "dependencies": {
    "@supabase/supabase-js": "^2.52.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "stripe": "^14.9.0",
    "supabase": "^2.31.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}