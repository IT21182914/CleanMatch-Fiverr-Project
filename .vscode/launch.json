{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/server.js",
            "restart": true,
            "runtimeExecutable": "node",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}/backend",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/backend/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (with Nodemon)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceFolder}/backend/node_modules/.bin/nodemon",
            "runtimeArgs": [
                "--inspect"
            ],
            "program": "${workspaceFolder}/backend/server.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}/backend",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/backend/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Migration Script",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/scripts/migrate.js",
            "args": [
                "up"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Seed Script",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/scripts/seed.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Running Backend",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/backend/**",
                "!**/node_modules/**"
            ]
        }
    ]
}